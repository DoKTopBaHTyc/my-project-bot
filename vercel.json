{
    "version": 2,
    "builds": [
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist"  // Указываем папку, которую создаёт Vite
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "client/dist/$1"
      },
      // Для SPA (React Router) добавьте fallback на index.html
      {
        "src": "/.*",
        "dest": "/client/dist/index.html"
      }
    ]
  }